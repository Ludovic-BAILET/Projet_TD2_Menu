<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".ProfilBoiteAmisActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/photo_profil"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nom_utilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_profil_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photo_profil"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/button_abonement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_sub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>